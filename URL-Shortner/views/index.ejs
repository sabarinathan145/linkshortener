 <div class="container">
                <div id='vij'>
                <h1>URL Shortner</h1>
                </div>
 
                
                <form action="/create" method="POST" class="my-4 form-inline">  
           
                <input required placeholder="Url" type="url" name="longurl"  class="form-control col mr-2">
                <button class="btn btn-outline-success" type="submit" value="Submit">Shrink</button>
            
                </form>
    
            
    <div class="table-responsive1">
                    <table class="table table-hover  table-responsive">
                    <thead>
                        <tr>
                        <th>Full URL</th>
                        <th>Short URL</th>
                        <th>Clicks</th>
                        <th>Delete</th>
                        </tr>
                    </thead>
                    
                    
                <% for( let i = 0; i < info.length; i++ ) { %>   
                    <tbody>
                    <tr>
                            <td><a href="<%= info[i].longurl %>"><%=info[i].longurl%></a></td>
                            <td><a href="/<%=info[i].shorturl%>" target="_blank"> <strong> http://Sabar_I.com/<%=info[i].shorturl%> </strong></a></td>
                            <td>Total click:

                                <%=info[i].count%></td>
                            <td>
                            <a href="/delete/<%=info[i]._id %> " class="btn border-shadow delete">
                                    <span class="text-gradiant"><i class="fas fa-times"></i></span>
                            </a>   
                        </td>
                        </tr>  
                    
                    </tbody>
                <% } %>
 
